	</form>

	<p id="WKCReadModuleSubscribeFetchFlash" class="WKCSharedHidden WKCSharedFlash"></p>

	<script type="text/javascript">
		d3.select('#WKCReadModuleSubscribeFetchForm').on('submit', function() {
			d3.event.preventDefault();
			
			WKCReadModuleSubscribe.interfaceFetchFormDidSubmit();
		});
	</script>

	<div id="WKCReadModuleSubscribeLoader" class="WKCSharedHidden">
		<%- include('../../_shared/WKCLoader/view.ejs') %>
