	<div id="WKCReadModuleSubscribeSuggestions" class="WKCSharedHidden">
		<p><%= OLSKLocalized('WKCReadModuleSubscribeSuggestionsAlertText') %></p>
		<ul id="WKCReadModuleSubscribeSuggestionsList"></ul>
	</div>

	<div id="WKCReadModuleSubscribeAlternatives" class="WKCSharedHidden">
		<p><%= OLSKLocalized('WKCReadModuleSubscribeAlternativesAlertText') %></p>
		<ul></ul>
	</div>

	<div id="WKCReadModuleSubscribeConfirmation" class="WKCSharedHidden">

		<h2><%= OLSKLocalized('WKCReadModuleSubscribeConfirmationHeadingText') %></h2>

		<form id="WKCReadModuleSubscribeConfirmationForm">
			<p>
				<input type="text" placeholder="<%= OLSKLocalized('WKCReadModuleSubscribeConfirmationFormNameText') %>" id="WKCReadModuleSubscribeConfirmationFormName">
			</p>
			
			<p>
				<textarea placeholder="<%= OLSKLocalized('WKCReadModuleSubscribeConfirmationFormBlurbText') %>" id="WKCReadModuleSubscribeConfirmationFormBlurb"></textarea>
			</p>
			
			<p>
				<input type="text" hidden id="WKCReadModuleSubscribeConfirmationFormType">
			</p>

			<p>
				<input type="submit" value="<%= OLSKLocalized('WKCReadModuleSubscribeConfirmationFormSubmitText') %>">
			</p>

			<p>
